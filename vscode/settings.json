{
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.formatOnSave": true,
    "editor.inlineSuggest.enabled": true,
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 120,
    "elixirLS.fetchDeps": false,
    "elixirLS.suggestSpecs": false,
    "emmet.includeLanguages": {
        "erb": "html",
        "html-eex": "html",
        "phoenix-heex": "html"
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.associations": {
        ".envrc": "shellscript",
        "*.eex": "html-eex",
        "*.leex": "html-eex"
    },
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "ruby": true
    },
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.keymap": "none",
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.views.fileHistory.location": "explorer",
    "gitlens.views.lineHistory.location": "explorer",
    "ruby.intellisense": "rubyLocate",
    "ruby.rubocop.executePath": "./bin/",
    "ruby.useLanguageServer": true,
    "search.exclude": {
        "_build": true,
        ".elixir_ls": true,
        "**/fixtures": true,
        "**/log": true,
        "**/tmp": true,
        "deps": true
    },
    "search.quickOpen.history.filterSortOrder": "recency",
    "search.searchEditor.reusePriorSearchConfiguration": true,
    "security.workspace.trust.untrustedFiles": "open",
    "tailwindCSS.emmetCompletions": true,
    "tailwindCSS.includeLanguages": {
        "html-eex": "html",
        "erb": "html"
    },
    "terminal.integrated.copyOnSelection": true,
    "vscode-run-rspec-file.custom-command": "bundle exec spring rspec",
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "workbench.colorCustomizations": {
        "terminal.selectionBackground": "#fbff0091", //Currently SELECTED text
    },
    "workbench.colorTheme": "Dracula",
    "workbench.startupEditor": "none",
    "editor.multiCursorModifier": "ctrlCmd",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "editor.accessibilitySupport": "off",
    "terminal.external.osxExec": "iTerm.app",
    "files.defaultLanguage": "ruby",
    "ruby.specCommand": "bundle exec rspec",
    "rewrap.wrappingColumn": 110,
    "terminal.integrated.cursorBlinking": true,
    "autoHide.hideOnOpen": false,
    "autoHide.autoHideSideBar": false,
    "autoHide.autoHidePanel": false,
    "editor.minimap.autohide": true,
    "tabnine.experimentalAutoImports": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
}